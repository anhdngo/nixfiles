mode $mode_display {
    bindsym l exec --no-startup-id "$DOTFILES/scripts/monitor/monitor_layout.sh", mode "default"
    bindsym r exec --no-startup-id "$DOTFILES/scripts/monitor/rofi-randr", mode "default"
    bindsym a exec --no-startup-id "arandr", mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+c mode "default"
}
bindsym $alt+Control+d mode $mode_display

